<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rolling="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <com.jkb.rollinglayout.RollingLayout
        android:id="@+id/rollingDownUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        rolling:rolling_eachTime="800"
        rolling:rolling_orientation="downUp"
        rolling:rolling_pause="2000"/>

</LinearLayout>
