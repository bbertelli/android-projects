<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/list_item"
    android:elevation="2dp">

    <TextView
        android:id="@+id/name_repo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryText"/>

    <TextView
        android:id="@+id/desc_repo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_repo"
        android:text="@string/loading"
        android:textColor="@color/colorPrimaryText"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/lang_repo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc_repo"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_language"
        android:drawablePadding="8dp"
        android:text="@string/loading" />

    <TextView
        android:id="@+id/updated_repo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/lang_repo"
        android:layout_alignParentEnd="true"
        android:drawableStart="@drawable/ic_updated"
        android:drawablePadding="8dp"
        android:text="@string/loading" />

</RelativeLayout>
