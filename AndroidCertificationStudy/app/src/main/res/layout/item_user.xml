<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/list_item"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/avatar_user"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:elevation="4dp"/>

    <TextView
        android:id="@+id/name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/avatar_user"
        android:layout_marginStart="16dp"
        android:text="@string/loading"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/login_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_user"
        android:layout_alignStart="@id/name_user"
        android:text="@string/loading"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/company_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_user"
        android:layout_alignStart="@id/name_user"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_company"
        android:drawablePadding="8dp"
        android:text="@string/loading" />

    <TextView
        android:id="@+id/location_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/company_user"
        android:layout_alignParentEnd="true"
        android:drawableStart="@drawable/ic_location"
        android:drawablePadding="8dp"
        android:text="@string/loading" />

</RelativeLayout>
