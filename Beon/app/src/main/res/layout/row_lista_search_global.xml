<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White10Black">

    <ImageView
        android:id="@+id/img_conta_lista_log_atividade"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/img_user_small"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:layout_alignStart="@+id/username_lista_log_atividade"
        android:background="@color/colorDivider" />

    <TextView
        android:id="@+id/username_lista_log_atividade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/img_conta_lista_log_atividade"
        android:text="nomeusuario"
        android:textColor="@color/textPrimary"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/date_lista_log_atividade"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_adduser_button" />

</RelativeLayout>