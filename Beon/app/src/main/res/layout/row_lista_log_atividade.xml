<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White10Black">

    <ImageView
        android:id="@+id/img_conta_lista_log_atividade"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:background="@drawable/img_user_small"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:layout_alignStart="@+id/username_lista_log_atividade"
        android:background="@color/colorDivider" />

    <TextView
        android:id="@+id/username_lista_log_atividade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_conta_lista_log_atividade"
        android:layout_toEndOf="@+id/img_conta_lista_log_atividade"
        android:text="nomeusuario"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold|italic"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/date_lista_log_atividade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/username_lista_log_atividade"
        android:layout_marginEnd="16dp"
        android:text="5min"
        android:textColor="@color/textSecondary"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/atividade_lista_log_atividade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_lista_log_atividade"
        android:layout_alignStart="@+id/username_lista_log_atividade"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:text="exemplo de atividade do usuÃ¡rio"
        android:textColor="@color/textPrimary"
        android:textSize="10sp"/>

</RelativeLayout>