<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_bottom"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_alignParentBottom="true"
    android:background="@color/textIcons"
    android:minHeight="?attr/actionBarSize"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_btn_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_home_unselected"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_btn_global"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="center">
        <ImageButton
            android:id="@+id/btn_global"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_search_unselected"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_btn_contacts"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="center">
        <ImageButton
            android:id="@+id/btn_contacts"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_contacts_unselected"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_btn_notification"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="center">
        <ImageButton
            android:id="@+id/btn_notification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_notification_unselected"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_btn_perfil"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="center">
        <ImageButton
            android:id="@+id/btn_perfil"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_perfil_unselected"/>
    </RelativeLayout>

    </LinearLayout>

</RelativeLayout>