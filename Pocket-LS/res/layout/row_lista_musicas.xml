<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/musica_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="1 "
        android:textColor="@color/numFaixas"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/musica_ponto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/musica_id"
        android:text=". "
        android:textColor="@color/numFaixas"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/musica_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/musica_ponto"
        android:lineSpacingExtra="10dp"
        android:text="Nome: "
        android:textColor="@color/corFaixas"
        android:textSize="15sp" />

</RelativeLayout>