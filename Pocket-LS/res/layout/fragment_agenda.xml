<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!--
        <com.google.android.gms.ads.AdView
        android:id="@+id/adView_agenda_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-0962119360794951/3367817811" />
        -->

        <TextView
            android:id="@+id/txt_titulo_agenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/aviso_agenda" />

        <!-- Esquerda 1 linha -->

        <Button
            android:id="@+id/btn_jan"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/txt_titulo_agenda"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/btn_fev"
            android:drawableBottom="@drawable/ic_agenda_azul"
            android:text="Janeiro"
            android:textColor="@color/txt_agenda"
            android:textSize="14sp"
            android:textStyle="bold" />
        <!-- Esquerda 1 linha -->


        <!-- Meio 1 linha -->

        <Button
            android:id="@+id/btn_fev"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/txt_titulo_agenda"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawableBottom="@drawable/ic_agenda_azul"
            android:text="Fevereiro"
            android:textColor="@color/txt_agenda"
            android:textSize="14sp"
            android:textStyle="bold" />
        <!-- Meio 1 linha -->


        <!-- Direita 1 linha -->

        <Button
            android:id="@+id/btn_mar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/txt_titulo_agenda"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/btn_fev"
            android:drawableBottom="@drawable/ic_agenda_azul"
            android:text="MarÃ§o"
            android:textColor="@color/txt_agenda"
            android:textSize="14sp"
            android:textStyle="bold" />
        <!-- Direita 1 linha -->


        <!-- Esquerda 2 linha -->

        <Button
            android:id="@+id/btn_abril"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btn_jan"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/btn_maio"
            android:drawableBottom="@drawable/ic_agenda_azul"
            android:text="Abril"
            android:textColor="@color/txt_agenda"
            android:textSize="14sp"
            android:textStyle="bold" />
        <!-- Esquerda 2 linha -->


        <!-- Meio 2 linha -->

        <Button
            android:id="@+id/btn_maio"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btn_fev"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawableBottom="@drawable/ic_agenda_azul"
            android:text="Maio"
            android:textColor="@color/txt_agenda"
            android:textSize="14sp"
            android:textStyle="bold" />
        <!-- Meio 2 linha -->


        <!-- Direita 2 linha -->

        <Button
            android:id="@+id/btn_jun"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btn_mar"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/btn_maio"
            android:drawableBottom="@drawable/ic_agenda_azul"
            android:text="Junho"
            android:textColor="@color/txt_agenda"
            android:textSize="14sp"
            android:textStyle="bold" />
        <!-- Direita 2 linha -->


        <!-- Esquerda 3 linha -->

        <Button
            android:id="@+id/btn_julho"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btn_abril"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/btn_agosto"
            android:drawableBottom="@drawable/ic_agenda_azul"
            android:text="Julho"
            android:textColor="@color/txt_agenda"
            android:textSize="14sp"
            android:textStyle="bold" />
        <!-- Esquerda 3 linha -->


        <!-- Meio 3 linha -->

        <Button
            android:id="@+id/btn_agosto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btn_maio"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawableBottom="@drawable/ic_agenda_azul"
            android:text="Agosto"
            android:textColor="@color/txt_agenda"
            android:textSize="14sp"
            android:textStyle="bold" />
        <!-- Meio 3 linha -->


        <!-- Direita 3 linha -->

        <Button
            android:id="@+id/btn_set"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btn_jun"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/btn_agosto"
            android:drawableBottom="@drawable/ic_agenda_azul"
            android:text="Setembro"
            android:textColor="@color/txt_agenda"
            android:textSize="14sp"
            android:textStyle="bold" />
        <!-- Direita 3 linha -->


        <!-- Esquerda 4 linha -->

        <Button
            android:id="@+id/btn_out"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btn_julho"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/btn_nov"
            android:drawableBottom="@drawable/ic_agenda_azul"
            android:text="Outubro"
            android:textColor="@color/txt_agenda"
            android:textSize="14sp"
            android:textStyle="bold" />
        <!-- Esquerda 4 linha -->


        <!-- Meio 4 linha -->

        <Button
            android:id="@+id/btn_nov"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btn_agosto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawableBottom="@drawable/ic_agenda_azul"
            android:text="Novembro"
            android:textColor="@color/txt_agenda"
            android:textSize="14sp"
            android:textStyle="bold" />
        <!-- Meio 4 linha -->


        <!-- Direita 3 linha -->

        <Button
            android:id="@+id/btn_dez"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btn_set"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/btn_nov"
            android:drawableBottom="@drawable/ic_agenda_azul"
            android:text="Dezembro"
            android:textColor="@color/txt_agenda"
            android:textSize="14sp"
            android:textStyle="bold" />
        <!-- Direita 3 linha -->

        <TextView
            android:id="@+id/filete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_dez"
            android:layout_centerHorizontal="true"
            android:text=""
            android:visibility="invisible" />
    </RelativeLayout>

</ScrollView>