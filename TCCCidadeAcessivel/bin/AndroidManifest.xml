<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.bertelli.ca"
      android:versionCode="1"
      android:versionName="1.0">
      
    <uses-sdk 
        android:minSdkVersion="4"
        android:targetSdkVersion="8" />
    
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
      
    <application android:icon="@drawable/icon_app" android:label="@string/app_name">
        
        <activity android:name=".SplashScreen"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    
        <activity android:name=".GMapsActivity"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
        
        <activity android:name=".SelecionarCidade"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
        
        <activity android:name=".TabsMenu"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
        
        <activity android:name=".ListaLocais"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
        
		<uses-library android:name="com.google.android.maps" />
		
    </application>

</manifest> 